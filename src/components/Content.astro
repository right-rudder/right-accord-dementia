---
const { data } = Astro.props;
---

<div class="bg-white px-6 py-32 lg:px-8">
  <div class="mx-auto max-w-3xl text-base/7 text-gray-700 text-center">
    <p class="text-base/7 font-semibold text-red-800">{data.upperheading}</p>
    <h2
      class="mt-2 text-pretty text-4xl font-semibold tracking-tight text-gray-900 sm:text-5xl"
    >
      {data.heading}
    </h2>
    <p class="mt-6 text-xl/8">
      {data.description}
    </p>
    {
      data.list &&
        data.list.map((list) => (
          <div class="mt-12 max-w-2xl text-center mx-auto font-parag">
            <h3 class="font-semibold text-yellow-600 text-2xl">{list.title}</h3>
            {list.description && <p class="mt-3">{list.description}</p>}
            <ul
              role="list"
              class="mt-8 max-w-xl space-y-8 text-gray-600 mx-auto"
            >
              {list.listItems.map((item) => (
                <li class="flex flex-col gap-x-3">
                  {item.icon && (
                    <svg
                      class="mt-1 mb-2 w-full size-12 flex-none text-yellow-600"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      aria-hidden="true"
                      data-slot="icon"
                    >
                      <path
                        fill-rule="evenodd"
                        d={item.icon}
                        clip-rule="evenodd"
                      />
                    </svg>
                  )}
                  <span>
                    <strong class="font-semibold text-red-800">
                      {item.title}
                    </strong>{" "}
                    â€“ {item.text}
                  </span>
                </li>
              ))}
            </ul>
          </div>
        ))
    }
    <div class="mt-16 max-w-2xl mx-auto text-center font-parag">
      <h2
        class="text-pretty text-3xl font-semibold tracking-tight text-gray-900"
      >
        {data.cta.heading}
      </h2>
      <p class="mt-6">
        {data.cta.description}
      </p>
      <a href="/#contact-us" class="btn-primary block mx-auto mt-8"
        >{data.cta.buttonText}</a
      >
    </div>
  </div>
</div>
