---
import ImageComp from "./ImageComp.astro";

const { data } = Astro.props;
---

<section
  class="bg-gray-50 flex justify-center items-center align-middle py-20 lg:py-16"
>
  <div class="flex flex-wrap justify-center items-center w-full max-w-5xl">
    <h3
      class="text-pretty text-center text-lg lg:text-2xl font-thin tracking-tight text-gray-800"
      set:html={data.title}
    />
    <div class="w-full mt-12 flex flex-wrap gap-20 justify-center items-center">
      {
        data.logos.map((logo) => (
          <a
            href={logo.link}
            target="_blank"
            class="hover:scale-110 duration-200"
          >
            <ImageComp
              imagePath={logo.imagePath}
              imageAlt={logo.imageAlt}
              styles="max-w-56 max-h-28 object-contain object-center"
            />
          </a>
        ))
      }
    </div>
  </div>
</section>
