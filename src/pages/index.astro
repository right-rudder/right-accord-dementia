---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import ContentBg from "../components/Content-bg.astro";
import BentoGrid from "../components/BentoGrid.astro";
import ContactForm from "../components/ContactForm.astro";
import LogoCloudRight from "../components/LogoCloudRight.astro";
import ProviderFor from "../components/ProviderFor.astro";

const landingData = {
  hero: {
    heading: `Compassionate Dementia Care Services`,
    subHeading: "Supporting Seniors with Memory Loss and Cognitive Decline",
    description: `Right Accord is dedicated to providing expert dementia care that enhances the well-being of seniors. Our compassionate team delivers personalized support, helping individuals maintain dignity, independence, and quality of life.`,
  },

  providerFor: {
    title: "Trusted by Families and Caregivers:",
    logos: [
      {
        imagePath: "/src/assets/partners/alz.webp",
        imageAlt: "Alz.org Logo",
        link: "https://www.alz.org/",
      },
      {
        imagePath: "/src/assets/partners/lakewood-ranch-mc.webp",
        imageAlt: "Lakewood Ranch Medical Center Logo",
        link: "https://www.lakewoodranchmedicalcenter.com/",
      },
      {
        imagePath: "/src/assets/partners/department-of-elder-affairs.png",
        imageAlt: "department of elder affairs Logo",
        link: "https://elderaffairs.org/",
      },
    ],
  },
  partners: {
    id: "partners",
    heading: "Committed to Quality Care",
    description:
      "We specialize in providing comprehensive dementia care that supports seniors and their families. Our experienced team is dedicated to creating a safe and nurturing environment where individuals with memory loss receive the personalized assistance they need. Contact us to learn more about our approach to compassionate senior care.",
    logos: [
      {
        imagePath: "/src/assets/partners/partners-logo_mv9awk_c_scale,w_554.jpg",
        imageAlt: "Partners logos",
      },
    ],
  },
  services: {
    id: "our-services",
    upperheading: "Our Care Services",
    heading: "Supporting Seniors with Dementia",
    description: `Right Accord offers a range of <a href="https://rightaccordhealth.com/specialty-care/alzheimers-dementia-care" target="_blank" class="font-semibold text-indigo-800 hover:underline">dementia care services</a>, ensuring that seniors receive the attention and support they need. Our team provides assistance with daily living, cognitive engagement, and specialized memory care to enhance quality of life. We prioritize safety, emotional well-being, and dignity in every aspect of our care.`,
    cards: [
      {
        imagePath: "/src/assets/images/right-accord-health-florida-live-in-home-1.jpg",
        imageAlt: "Right Accord dementia care",
        title: "Personalized Care Plans",
        descriptions: [
          "Every senior’s needs are unique. Our personalized dementia care plans are designed to provide tailored support, ensuring comfort, safety, and engagement.",
          "We prioritize dignity and independence, creating a compassionate environment that fosters a sense of well-being for those experiencing cognitive decline.",
          "Families can trust our dedicated caregivers to provide consistent, professional care while offering peace of mind to loved ones.",
        ],
      },
      {
        title: "Cognitive and Memory Support",
        descriptions: [
          "Our dementia care program includes activities and therapies designed to stimulate cognitive function and slow the progression of memory loss.",
          "From memory exercises to daily routines that encourage independence, we create a supportive atmosphere that promotes mental engagement.",
        ],
      },
      {
        title: "Safety and Supervision",
        descriptions: [
          "We understand the challenges of dementia and the importance of a secure environment. Our caregivers provide 24/7 support to ensure safety and well-being.",
          "Whether it’s managing wandering risks, medication reminders, or daily assistance, we are here to provide reliable and compassionate care.",
        ],
      },
      {
        imagePath: "/src/assets/images/main-image_senior-care-advisor.jpg",
        imageAlt: "Right Accord senior care support",
        title: "Family Support and Guidance",
        descriptions: [
          "Caring for a loved one with dementia can be overwhelming. We offer guidance and support to families, helping them navigate the challenges of memory loss.",
          "Our team provides education, resources, and emotional support to ensure families feel confident in the care their loved ones receive.",
        ],
      },
    ],
  },
  howWeDoIt: {
    id: "how-we-do-it",
    imagePath: "/src/assets/images/how-we-do-it.jpg",
    imageAlt: "Right Accord dementia care services",
    upperheading: "Our Approach",
    heading: "How We Provide Care",
    sections: [
      {
        description: `Compassionate In-Home Care`,
        paragraph:
          "Right Accord specializes in in-home dementia care, providing seniors with a familiar and comfortable environment. Our caregivers assist with daily activities, personal care, and cognitive engagement, ensuring that seniors feel supported and valued.",
      },
      {
        description: `Personalized Assessments`,
        paragraph:
          "We conduct thorough assessments to develop customized care plans that cater to each senior's specific needs. Our goal is to provide the right level of support while preserving as much independence as possible.",
      },
      {
        description: `Ongoing Support and Monitoring`,
        paragraph:
          "Dementia care requires continuous adjustments to meet evolving needs. Our team closely monitors changes in behavior, health, and cognitive abilities to adapt care plans accordingly. We are committed to providing the highest standard of senior care at every stage of the journey.",
      },
    ],
  },
};
---

<BaseLayout>
  <Hero data={landingData.hero}/>
  <ProviderFor data={landingData.providerFor} />
  <LogoCloudRight data={landingData.partners} />
  <BentoGrid data={landingData.services} />
  <ContentBg data={landingData.howWeDoIt} />
  <ContactForm />
</BaseLayout>
